{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableRateLimiting",
    ":disableDependencyDashboard"
  ],
  "helm-values": {
    "fileMatch": [
      ".+\\.ya?ml$"
    ]
  },
  "helmv3": {
    "fileMatch": [
      "(^|/)Chart\\.ya?ml$"
    ]
  },
  "rangeStrategy": "bump"
}
